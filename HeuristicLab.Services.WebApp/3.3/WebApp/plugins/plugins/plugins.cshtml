<div class="default-view-container">
    <script type="text/ng-template" id="pluginsExceptionDialog">
        <div class="modal-header">
            <button type="button" ng-click="close()" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Plugin {{pluginName}}</h4>
        </div>
        <div class="modal-body">
            {{exception}}
        </div>
    </script>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">WebApp Plugins</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-condensed" ts-wrapper>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th ts-criteria="Name">Name</th>
                                <th ts-criteria ="AssemblyName">Assembly</th>
                                <th ts-criteria="LastReload">Last reload</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="plugin in plugins" ts-repeat>
                                <td>{{$index + 1}}</td>
                                <td>{{plugin.Name}}</td>
                                <td>{{plugin.AssemblyName}}</td>
                                <td>{{plugin.LastReload}}</td>
                                <td>
                                    <span ng-hide="plugin.Exception" class="glyphicon glyphicon glyphicon-ok" style="color: green"></span>
                                    <span ng-show="plugin.Exception" class="glyphicon glyphicon glyphicon-remove" style="color: darkred"
                                          ng-click="open(plugin.Name, plugin.Exception)"></span>
                                </td>
                                <td>
                                    <a ng-href="" data-ng-click="reloadPlugin(plugin.Name)">Reload</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>